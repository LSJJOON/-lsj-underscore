{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"standard"
	],
	"plugins": ["jest"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"no-tabs": 0,
		"semi": ["error", "always"]
	}
}
